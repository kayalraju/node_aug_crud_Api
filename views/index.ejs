<%- include('common/head')%>
  <!-- Navigation-->
  <%- include('common/navbar')%>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="site-heading">
              <h1>Clean Blog</h1>
              <span class="subheading">A Blog Theme by Start Bootstrap</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
      <a href="/create" class="btn btn-info">Add Data</a>
      <div class="row gx-4 gx-lg-5">


        <table class="table">
          <thead>
            <tr>

              <th scope="col">Product Name</th>
              <th scope="col">Product Price</th>
              <th scope="col">Product Size</th>
              <th scope="col">Product Details</th>
              <th colspan="2">Action</th>


            </tr>
          </thead>
          <% if(displaydata.length>0) {%>
            <tbody>
              <% for(let product of displaydata) {%>
                <tr>

                  <td>
                    <%= product. product_name %>
                  </td>
                  <td>
                    <%= product. price %>
                  </td>
                  <td>
                    <%= product. size %>
                  </td>
                  <td>
                    <%= product. details %>
                  </td>
                  <td><a href="/edit-product/<%= product.id %>" class="btn btn-success">Edit</a></td>
                  <td><a href="/delete-product/<%= product.id %>" class="btn btn-danger">Delete</a></td>

                </tr>

            </tbody>
            <%}} else {%>
              <h1>No data found</h1>
              <% } %>
        </table>
      </div>
    </div>
    <!-- Footer-->
    <%- include('common/footer')%>